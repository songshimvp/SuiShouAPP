<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:suishou="http://schemas.android.com/apk/res/com.songshi.suishou"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:orientation="vertical">

    <!-- 设置内容的ViewPager -->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">          
    </android.support.v4.view.ViewPager>

    <!-- 设置4个Tab（自定义的View） -->
    <LinearLayout 
        android:background="@drawable/tab_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"> 
        
        <com.songshi.suishou.ChangeColorIconWithTextView
            android:id="@+id/newsView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            suishou:icon="@drawable/ic_menu_start_conversation"
            suishou:color="#ff45c01a"
            suishou:text="天下事"
            suishou:text_size="12sp"
            />
        <com.songshi.suishou.ChangeColorIconWithTextView
            android:id="@+id/marksView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            suishou:icon="@drawable/ic_menu_emoticons"
            suishou:color="#ff45c01a"
            suishou:text="书香屋"
            suishou:text_size="12sp"
            />
        <com.songshi.suishou.ChangeColorIconWithTextView
            android:id="@+id/toolsView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            suishou:icon="@drawable/ic_menu_friendslist"
            suishou:color="#ff45c01a"
            suishou:text="工具箱"
            suishou:text_size="12sp"
            />
        <com.songshi.suishou.ChangeColorIconWithTextView
            android:id="@+id/gamesView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            suishou:icon="@drawable/ic_menu_allfriends"
            suishou:color="#ff45c01a"
            suishou:text="娱乐房"
            suishou:text_size="12sp"
            />
        
    </LinearLayout>
</LinearLayout>
